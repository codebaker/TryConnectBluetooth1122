<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothClientActivity">

    <ProgressBar
        android:id="@+id/progressBarConnecting"
        style="?android:attr/progressBarStyle"
        android:layout_width="146dp"
        android:layout_height="148dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="190dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_U"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U"
        app:layout_constraintEnd_toEndOf="@+id/btn_D"
        app:layout_constraintStart_toStartOf="@+id/btn_D"
        tools:layout_editor_absoluteY="93dp" />

    <Button
        android:id="@+id/btn_D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        app:layout_constraintBottom_toBottomOf="@+id/btn_L"
        app:layout_constraintEnd_toEndOf="@+id/btn_C"
        app:layout_constraintStart_toStartOf="@+id/btn_C"
        app:layout_constraintTop_toTopOf="@+id/btn_L" />

    <Button
        android:id="@+id/btn_C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btn_L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="163dp" />

    <Button
        android:id="@+id/btn_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        app:layout_constraintBottom_toBottomOf="@+id/btn_D"
        app:layout_constraintTop_toTopOf="@+id/btn_D"
        tools:layout_editor_absoluteX="251dp" />

    <Button
        android:id="@+id/btn_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/btn_b"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="318dp" />

    <Button
        android:id="@+id/btn_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="b"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_a"
        app:layout_constraintEnd_toStartOf="@+id/btn_c"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_a"
        app:layout_constraintTop_toTopOf="@+id/btn_a" />

    <Button
        android:id="@+id/btn_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_b"
        app:layout_constraintEnd_toStartOf="@+id/btn_d"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_b"
        app:layout_constraintTop_toTopOf="@+id/btn_b" />

    <Button
        android:id="@+id/btn_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="d"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_c"
        app:layout_constraintTop_toTopOf="@+id/btn_c" />

</android.support.constraint.ConstraintLayout>